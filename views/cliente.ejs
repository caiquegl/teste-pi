        <h2>Endereço</h2>
        <form>
            <div class="row">
              <div class="col-5">
                <label for="Rua">Digite o nome da sua rua:</label>
                <input type="text" class="form-control rua" id="formGroupExampleInput" placeholder="Digite o nome da sua rua com o numero" name="Rua" value="<%= usuario.endereco %>">
              </div>
            
                <div class="col-5">
                <label for="Complemento">Complemento:</label>
                <input type="text" class="form-control Complemento" id="formGroupExampleInput" placeholder="Complemento" name="Complemento">
                </div>

                <div class="col-5">
                    <label for="cep">Cep:</label>
                    <input type="text" class="form-control cep" id="formGroupExampleInput" name="cep" maxlength="8" OnKeyPress="formatar('#####-###', this)" placeholder="_ _ _ _ _ - _ _ _">
                </div>

